<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical"
    tools:context="user.ProfileActivity">

    <include layout="@layout/toolbar_flights" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="2"
                android:background="@color/backgroundDefault"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="John Doe"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/btnEditProfilePicture"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_add_a_photo_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@color/backgroundDefault"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/profileHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="Account Information"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/txtClientFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="FirstName: John" />

                <TextView
                    android:id="@+id/txtClientLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Las name: Doe" />

                <TextView
                    android:id="@+id/txtClientEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Email: john.doe@gmail.com" />

                <TextView
                    android:id="@+id/txtClientPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Phone: 4162354874" />
                <!--<TextView-->
                <!--android:id="@+id/txtClientCreditCard"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="16dp"-->
                <!--android:text="Credit Card: **** **** **** 2048"/>-->


                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_edit_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="2"
                android:background="@color/backgroundDefault"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="License Image"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/licenseImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center" />


                <ImageButton
                    android:id="@+id/btnEditLicensePicture"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_add_a_photo_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="2"
                android:background="@color/backgroundDefault"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="Identification Image"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/idImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center" />


                <ImageButton
                    android:id="@+id/btnEditIdPicture"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_add_a_photo_black_24dp" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
