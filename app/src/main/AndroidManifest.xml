        <activity android:name="payments.activities.Payment_method" />
        <activity android:name="payments.activities.Payment_Details" />
        <activity android:name="packages.activities.PackagesViewDetailsActivity" />
        <activity android:name="user.SignActivity" />
        <activity android:name="user.UpdateProfileActivity" />
        <activity android:name="user.SignUpActivity" />
        <activity android:name="startup.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hotels.activities.HotelViewDetailsActivity" />
        <activity android:name="hotels.activities.HotelBookingDetails" />
        <activity android:name="hotels.activities.HotelActivity" />
