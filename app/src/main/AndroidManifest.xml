            android:parentActivityName="startup.Home"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="startup.Home" />
        </activity>
        <activity android:name="startup.AboutActivity" />
        <activity android:name="user.LoginActivity" />
